<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="de.bht.fpa.mail.s797307.fsnavigation.NavigationView"
            id="de.bht.fpa.mail.s797307.fsnavigation.NavigationView"
            name="NavigationView"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               id="de.bht.fpa.mail.s797307.fsnavigation.NavigationView"
               minimized="false"
               relationship="stack"
               relative="de.bht.fpa.mail.s797307.main.perspective.left">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="de.bht.fpa.mail.s797307.fsnavigation.commands.category"
            name="Basic Menu Commands">
      </category>
      <command
            categoryId="de.bht.fpa.mail.s797307.fsnavigation.commands.category"
            id="de.bht.fpa.mail.s797307.fsnavigation.commands.openDirectory"
            name="Open Directory">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.bht.fpa.mail.s797307.fsnavigation.handlers.DirectoryHandler"
            commandId="de.bht.fpa.mail.s797307.fsnavigation.commands.openDirectory">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="de.bht.fpa.mail.s797307.fsnavigation.commands.openDirectory"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="de.bht.fpa.mail.s797307.fsnavigation.menus.Tree"
               label="Tree"
               mnemonic="T">
            <command
                  commandId="de.bht.fpa.mail.s797307.fsnavigation.commands.openDirectory"
                  id="de.bht.fpa.mail.s797307.fsnavigation.menus.openDirectory"
                  mnemonic="O">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="de.bht.fpa.mail.s797307.fsnavigation.toolbars.sampleToolbar">
            <command
                  commandId="de.bht.fpa.mail.s797307.fsnavigation.commands.openDirectory"
                  icon="icons/sample.gif"
                  id="de.bht.fpa.mail.s797307.fsnavigation.toolbars.openDirectory"
                  tooltip="Say hello world">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
</plugin>
